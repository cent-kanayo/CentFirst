@page
@model CentRazor.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Categories";
}

<div>

    <h1>Categories</h1>
    <a asp-page="/Categories/create">Add a new Category</a>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.categoryList)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="btn-group w-75" role="group">
                        <a asp-page="/Categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>   Edit
                        </a>
                        <a asp-page="/Categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>    Delete
                        </a>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>


