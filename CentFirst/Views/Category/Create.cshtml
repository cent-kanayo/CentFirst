@model Category
@{
    ViewData["Title"] = "Create category";
}
<div>
    <h1>Create a new category</h1>
</div>

<div>
    <form class="form-control" method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-control">
            <label asp-for="Name"></label>
            <input asp-for="Name" id="category" placeholder="my Categoty" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-control">
            <label asp-for="DisplayOrder"></label>
            <input  asp-for="DisplayOrder" id="category" placeholder="Display Order" class="form-control" />
            <span class="text-danger" asp-validation-for="DisplayOrder"></span>
        </div>

        <button type="submit">Submit</button>
        
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}